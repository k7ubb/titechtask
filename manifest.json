{
	"manifest_version" : 2,
	"name" : "Titech課題リスト",
	"version" : "1.0.4",
	"description": "OCW-iとT2SCHOLAの未提出課題の一覧を表示します",
	"permissions": [
		"storage",
		"https://portal.nap.gsic.titech.ac.jp/*",
		"https://t2schola.titech.ac.jp/*",
		"https://secure.ocw.titech.ac.jp/*"
	],
	"content_scripts" : [
		{
			"matches" : ["https://t2schola.titech.ac.jp/mod/assign/*"],
			"js" : ["t2monitor.js"],
			"run_at" : "document_end"
		},
		{
			"matches" : ["https://secure.ocw.titech.ac.jp/ocwi/*"],
			"js" : ["ocwmonitor.js"],
			"run_at" : "document_end"
		}
	],
	"icons": {
		"256": "icon.png"
	},
	"browser_action": {
		"default_popup": "popup/index.htm"
	},
	"background": {
		"scripts": ["function.js", "background.js"]
	}
}
